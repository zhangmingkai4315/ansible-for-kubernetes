[Unit]
Description=Kubernetes API Server
After=network.target

[Service]
EnvironmentFile=-/etc/kubernetes/kubernetes-api-server
ExecStart=/usr/bin/kube-apiserver \
        $STORAGE_BACKEND \
        $KUBE_LOGTOSTDERR \
        $KUBE_LOG_DIR \
        $KUBE_LOG_LEVEL \
        $KUBE_ETCD_SERVERS \
	    $KUBE_API_ADDRESS \
	    $KUBE_API_PORT \
	    $KUBE_SERVICE_ADDRESSES \
	    $KUBE_ADMISSION_CONTROL \
	    $KUBE_API_ARGS
Restart=on-failure
Type=notify
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
